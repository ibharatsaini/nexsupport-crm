{
  "name": "saas-crm",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w packages/client",
    "dev:server": "npm run dev -w packages/server",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
